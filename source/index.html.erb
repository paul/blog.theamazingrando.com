
<% page_articles.each_with_index do |article, i| %>
  <section>
    <h2>
      <%= link_to article.title, article %>
    </h2>
    <ul class="meta">
      <li class="icon fa-clock">
        <%= article.date.strftime('%b %e, %Y') %>
      </li>
    </ul>
    <p>
      <%= article.data[:first_paragraph] %>
    </p>
    <%= link_to "Read more", article %>
  </section>
<% end %>

