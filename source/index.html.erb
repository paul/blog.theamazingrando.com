
<% page_articles.each_with_index do |article, i| %>
  <article>
    <h1>
      <%= link_to article.title, article %>
    </h1>
    <h2>
      <%= article.date.strftime('%b %e, %Y') %>
    </h2>
    <p>
      <%= article.data[:first_paragraph] %>
    </p>
    <p>
      <%= link_to "Read more", article %>
    </p>
  </article>
<% end %>

